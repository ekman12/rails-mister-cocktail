<div class="bottom-form">
  <h2>Add New Cocktail</h2>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, placeholder: "What's the yummiest rummiest cocktail you know"%>
    <label class="btn-photo">
      Upload a picture of this yummy concoction
      <span style="display:none;">
        <%= f.input :photo, required: true, multiple: true, name: 'picture' %>
      </span>
    </label>
      <%= f.submit class: "btn-ghost"%>
    <% end %>
</div>
